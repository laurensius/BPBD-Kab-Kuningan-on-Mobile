<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.laurensius_dede_suhardiman.bpbdkabupatenkuningan.FragmentLogin">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/login"
        android:layout_marginTop="30dp"
        android:contentDescription="Login"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:id="@+id/tvNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="#666"
        android:layout_marginBottom="10dp"
        android:background="#36D7B7"
        android:text="Selamat datang di BPBD Kab Kuningan on Mobile"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Username"/>
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="99"
        android:inputType="text"
        android:hint="Username"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Password"/>
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="99"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:background="@color/btnPositif"
        android:text="Login"/>

</LinearLayout>
